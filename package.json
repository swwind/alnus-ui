{
  "private": true,
  "name": "lithe-monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "fmt": "pretty-quick",
    "fmt.staged": "pretty-quick --staged",
    "build": "yarn workspace litheui run build && yarn workspace litheui-docs run build",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "husky": "^8.0.3",
    "prettier": "^2.8.4",
    "prettier-plugin-tailwindcss": "^0.2.4",
    "pretty-quick": "^3.1.3"
  }
}
